{
	"compilerOptions": {
		"target": "ES5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"incremental": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"types": ["react/next"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@/styles": ["./styles/*"],
			"@/components": ["./components/*"],
			"@/pages": ["./pages/*"],
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/*.js",
		"**/*.jsx"
	],
	"exclude": ["node_modules"]
}
